<script type="text/javascript">
var col = new Array();
	col[0]="red";
	col[1]="blue";
	col[2]="green";
	col[3]="white";
	col[4]="purple";
	col[5]="orange";

var code = new array();
	code[0]="red";
	code[1]="purple";
	code[2]="green";
	code[3]="white";
	
			
var guess = new Array();

	


	
function go() { 
				guess[0]= document.getElementById("dropdown1").options[document.getElementById("dropdown1").selectedIndex].value;
				guess[1]= document.getElementById("dropdown2").options[document.getElementById("dropdown2").selectedIndex].value;
				guess[2]= document.getElementById("dropdown3").options[document.getElementById("dropdown3").selectedIndex].value;
				guess[3]= document.getElementById("dropdown4").options[document.getElementById("dropdown4").selectedIndex].value;
				img0 =  "assignment2_images/"+col[guess[0]]+".gif";	document.getElementById("blank1").src=img0;				
				img1 =  "assignment2_images/"+col[guess[1]]+".gif";	document.getElementById("blank2").src=img1;
				img2 =  "assignment2_images/"+col[guess[2]]+".gif";	document.getElementById("blank3").src=img2;
				img3 =  "assignment2_images/"+col[guess[3]]+".gif";	document.getElementById("blank4").src=img3;
				}
				
	white=0;
	red=0;
for (i=0;i<=3;i++)
	{
		for (j=0;j<=3;j++)
			{
				if (guess[j] == code[i]) { white++; }
			}
		
	}
	
for (i=0;i<=3;i++)
	{
		if (guess[i] == code[i])
			{ red++;white--; }
	}

	alert(white+" pegs are the correct colour but in the wrong place. "+red+" pegs are the correct colour and in the correct place.");
	
					
</script>
